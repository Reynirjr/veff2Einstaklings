<%- include('partials/header') %>

<main class="voting-page">
  <h1>Voting: <%= group.name %></h1>
  
  <div class="group-info">
    <p><strong>Theme:</strong> <%= currentRound.theme || group.theme || 'No theme set' %></p>
    <p><strong>Voting Method:</strong>
      <% if (votingMethod === 'single_vote') { %>
        Single Vote (Choose your favorite song)
      <% } else if (votingMethod === 'top_3') { %>
        Top 3 Ranking (Choose your top 3 songs)
      <% } else if (votingMethod === 'rating') { %>
        Rating (Rate each song from 1-10)
      <% } %>
    </p>
    
    <div class="voting-status">
      <% if (phase === 'pending') { %>
        <p class="status pending">Song submission starts soon</p>
      <% } else if (phase === 'input') { %>
        <p class="status input">Song submission is open!</p>
      <% } else if (phase === 'voting') { %>
        <p class="status voting">Voting is open!</p>
      <% } else { %>
        <p class="status finished">Voting has ended</p>
      <% } %>
    </div>
  </div>

  <h2>Songs (<%= songs.length %>)</h2>
  
  <% if (songs.length === 0) { %>
    <p class="no-songs">No songs have been submitted for this round yet.</p>
  <% } else { %>
    <div class="songs-list">
      <% songs.forEach(song => { %>
        <div class="song-card <%= song.isWatched ? 'watched' : '' %>">
          <div class="song-status">
            <% if (song.isWatched) { %>
              <span class="watched-status">✓ Watched</span>
            <% } else { %>
              <span class="unwatched-status">Not watched yet</span>
            <% } %>
            
            <% if (song.userVote) { %>
              <span class="voted-status">
                <% if (votingMethod === 'single_vote') { %>
                  ★ Your vote
                <% } else if (votingMethod === 'top_3') { %>
                  ★ Your #<%= song.userVote %> pick
                <% } else if (votingMethod === 'rating') { %>
                  ★ Your rating: <%= song.userVote %>/10
                <% } %>
              </span>
            <% } %>
          </div>
          
          <h3 class="song-title"><%= song.title %></h3>
          <p class="song-artist">by <%= song.artist %></p>
          
          <div class="song-actions">
            <a href="/songs/<%= song.id %>" class="watch-button">
              <% if (song.isWatched) { %>
                Watch Again
              <% } else { %>
                Watch & Vote
              <% } %>
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
  
  <div class="navigation">
    <a href="/groups/<%= group.id %>" class="button">Back to Group</a>
  </div>
</main>

<style>
  .voting-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .group-info {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 30px;
  }
  
  .voting-status .status {
    display: inline-block;
    padding: 8px 15px;
    border-radius: 4px;
    font-weight: bold;
  }
  
  .status.pending {
    background-color: #e2e3e5;
    color: #383d41;
  }
  
  .status.input {
    background-color: #d1ecf1;
    color: #0c5460;
  }
  
  .status.voting {
    background-color: #d4edda;
    color: #155724;
  }
  
  .status.finished {
    background-color: #f8f9fa;
    color: #383d41;
  }
  
  .songs-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .song-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    background-color: white;
    transition: transform 0.2s;
    position: relative;
  }
  
  .song-card.watched {
    background-color: #f8f9fa;
  }
  
  .song-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
  }
  
  .song-status {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
  }
  
  .watched-status {
    color: #28a745;
    font-size: 0.9em;
  }
  
  .unwatched-status {
    color: #6c757d;
    font-size: 0.9em;
  }
  
  .voted-status {
    color: #ffc107;
    font-weight: bold;
    font-size: 0.9em;
  }
  
  .song-title {
    margin: 0 0 5px 0;
  }
  
  .song-artist {
    color: #666;
    margin: 0 0 15px 0;
  }
  
  .song-actions {
    margin-top: 15px;
  }
  
  .watch-button {
    display: inline-block;
    background-color: #1976d2;
    color: white;
    padding: 8px 15px;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
  .watch-button:hover {
    background-color: #1565c0;
  }
  
  .navigation {
    margin-top: 20px;
  }
  
  .button {
    display: inline-block;
    background-color: #f0f0f0;
    color: #333;
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  
  .button:hover {
    background-color: #e0e0e0;
  }
  
  .no-songs {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    text-align: center;
    color: #6c757d;
  }
</style>

<%- include('partials/footer') %>
